RegCSCond: is c=6 & R1 & R2 { tmp:1 = sborrow(R1:4,R2:4) ; export tmp; } # signed minus overflows (borrows)
RegCSCond: is c=7 & R1 & R2 { tmp:1 = ((R1:4 - R2:4) & 0x1) == 1 ; export tmp; } # odd

