CMPIBCond: is  c=1 & R2 & highlse5 { val:$(REGSIZE) = sext(highlse5); tmp:1 = (val == R2) ; export tmp; } # equal
CMPIBCond: is  c=2 & R2 & highlse5 { val:$(REGSIZE) = sext(highlse5); tmp:1 = (val s< R2) ; export tmp; } # signed less than
CMPIBCond: is  c=3 & R2 & highlse5 { val:$(REGSIZE) = sext(highlse5); tmp:1 = (val s<= R2) ; export tmp; } # signed less than equal
CMPIBCond: is  c=4 & R2 & highlse5 { val:$(REGSIZE) = sext(highlse5); tmp:1 = (val >= R2) ; export tmp; } # unsigned greater than or equal
CMPIBCond: is  c=5 & R2 & highlse5 { val:$(REGSIZE) = sext(highlse5); tmp:1 = (val != R2) ; export tmp; } # not equal
CMPIBCond: is  c=6 & R2 & highlse5 { val:$(REGSIZE) = sext(highlse5); tmp:1 = (val s>= R2) ; export tmp; } # signed greater than or equal
CMPIBCond: is  c=7 & R2 & highlse5 { val:$(REGSIZE) = sext(highlse5); tmp:1 = (val s> R2) ; export tmp; } # signed greater than

