#
##### The Add Conditions from table 5-4 on page 5-5
#
RegAddCond: is c = 0 { export 0:1; } # never
RegAddCond: is c = 1 & d = 0 & R1 & R2 { tmp:1 = (R1:4 == R2:4) ; export tmp; } # equal
RegAddCond: is c = 2 & d = 0 & R1 & R2 { tmp:1 = (R1:4 s< -R2:4) ; export tmp; } # signed less than negative of R2 
RegAddCond: is c = 3 & d = 0 & R1 & R2 { tmp:1 = (R1:4 s<= R2:4) ; export tmp; } # signed less than or equal to R2
RegAddCond: is c = 4 & d = 0 & R1 & R2 { tmp:1 = ! carry(R1:4,R2:4) ; export tmp; } # unsigned sum does not overflow
RegAddCond: is c = 5 & d = 0 & R1 & R2 { tmp:1 = (R1:4 + R2:4) == 0 ; export tmp; } # sum is zero or no overflow (why two definitions??)
RegAddCond: is c = 6 & d = 0 & R1 & R2 { tmp:1 = scarry(R1:4,R2:4); export tmp; } # signed sum overflows
RegAddCond: is c = 7 & d = 0 & R1 & R2 { tmp:1 = ((R1:4+R2:4) & 0x1) == 0x1 ; export tmp; } # sum is odd
RegAddCond: is c = 1 & d = 1 & R1 & R2 { tmp:1 = (R1 == R2) ; export tmp; } # equal
RegAddCond: is c = 2 & d = 1 & R1 & R2 { tmp:1 = (R1 s< -R2) ; export tmp; } # signed less than negative of R2 
RegAddCond: is c = 3 & d = 1 & R1 & R2 { tmp:1 = (R1 s<= R2) ; export tmp; } # signed less than or equal to R2
RegAddCond: is c = 4 & d = 1 & R1 & R2 { tmp:1 = ! carry(R1,R2) ; export tmp; } # unsigned sum does not overflow
RegAddCond: is c = 5 & d = 1 & R1 & R2 { tmp:1 = (R1 + R2) == 0 ; export tmp; } # sum is zero or no overflow (why two definitions??)
RegAddCond: is c = 6 & d = 1 & R1 & R2 { tmp:1 = scarry(R1,R2); export tmp; } # signed sum overflows
RegAddCond: is c = 7 & d = 1 & R1 & R2 { tmp:1 = ((R1+R2) & 0x1) == 0x1 ; export tmp; } # sum is odd


