DepCond: is c=1 { tmp:1 = (nullifyCondResult:4 == 0) ; export tmp; } # equal 
DepCond: is c=2 { tmp:1 = (nullifyCondResult:4 s< 0) ; export tmp; } # leftmost bit is one (< 0)
DepCond: is c=3 { tmp:1 = ((nullifyCondResult:4 & 0x1) == 1) ; export tmp; } # rightmost bit is 1 (odd)
