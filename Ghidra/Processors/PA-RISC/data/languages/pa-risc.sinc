	off = (
		((-1 * bit0) << 20) |
		(im21_1_12 << 9) |
		(im21_14_16 << 7) |
		(im21_16_21 << 2) |
		im21_12_14
	) << 11;
] { temp:$(REGSIZE) = off; export temp; }

lse11: immed is im11less0 & bit0
	[ immed	= ((-1*bit0) << 10) | im11less0; temp32L = immed; ]
	{ temp:$(ADDRSIZE) = immed; export temp; }

